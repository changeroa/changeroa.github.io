---
import BaseLayout from '../../layouts/BaseLayout.astro';
import SocialCard from '../../components/SocialCard.astro';
import ContactForm from '../../components/ContactForm.astro';
import ScrollReveal from '../../components/ScrollReveal.astro';
import { useTranslations } from '../../i18n/translations';

const t = useTranslations('en');
---

<BaseLayout title="Contact | Victor Jaepyo Jo">
  <section class="contact-section">
    <div class="container">
      <div class="contact-layout">
        <div class="content-side">
          <ScrollReveal animation="fade-up">
            <h1 class="page-title">{t('contact.title')}</h1>
            <p class="page-subtitle" set:html={t('contact.subtitle').replace('\n', '<br />')}></p>
          </ScrollReveal>
          
          <ScrollReveal animation="fade-up" delay={200}>
            <div class="form-wrapper">
              <ContactForm lang="en" />
            </div>
          </ScrollReveal>
        </div>

        <div class="links-side">
          <ScrollReveal animation="fade-left" delay={100}>
            <div class="social-grid">
              <SocialCard href="https://github.com" icon="github" label="Follow on" value="GitHub" delay={100} />
              <SocialCard href="https://linkedin.com" icon="linkedin" label="Connect on" value="LinkedIn" delay={200} />
              <SocialCard href="https://instagram.com" icon="instagram" label="Follow on" value="Instagram" delay={300} />
              <SocialCard href="mailto:hello@example.com" icon="email" label="Send an" value="Email" delay={400} />
            </div>
          </ScrollReveal>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .contact-section {
    padding: 8rem 0 4rem;
    min-height: calc(100vh - 100px);
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  .contact-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 6rem;
    align-items: center;
  }

  /* Text Content Side */
  .content-side {
    padding-right: 2rem;
  }

  .page-title {
    font-size: clamp(3rem, 8vw, 5rem);
    font-weight: 800;
    line-height: 1;
    letter-spacing: -0.02em;
    margin-bottom: 2rem;
    background: linear-gradient(to right, var(--color-text), var(--color-text-muted));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .page-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    line-height: 1.7;
    margin-bottom: 3rem;
    max-width: 90%;
  }

  .form-wrapper {
    margin-top: 2rem;
  }

  .btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background: var(--color-text);
    color: var(--color-bg);
    padding: 1.25rem 2.5rem;
    border-radius: 100px;
    font-weight: 600;
    font-size: 1.125rem;
    transition: all 0.3s cubic-bezier(0.25, 1, 0.5, 1);
  }

  .btn-primary:hover {
    transform: translateY(-4px) scale(1.02);
    box-shadow: 0 20px 40px -10px rgba(0,0,0,0.1);
  }

  :global(body.dark) .btn-primary:hover {
    box-shadow: 0 20px 40px -10px rgba(255,255,255,0.1);
  }

  /* Social Links Side */
  .social-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  /* Animations */
  .slide-up {
    opacity: 0;
    transform: translateY(30px);
    animation: slideUpFade 0.8s cubic-bezier(0.25, 1, 0.5, 1) forwards;
    animation-delay: var(--delay, 0ms);
  }

  @keyframes slideUpFade {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive */
  @media (max-width: 900px) {
    .contact-layout {
      grid-template-columns: 1fr;
      gap: 4rem;
    }

    .content-side {
      padding-right: 0;
      text-align: center;
    }

    .page-title {
      font-size: 3.5rem;
    }

    .page-subtitle {
      margin-left: auto;
      margin-right: auto;
    }

    .social-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .social-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
