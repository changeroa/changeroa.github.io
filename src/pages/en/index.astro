      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    min-height: calc(100vh - 100px);
    display: flex;
    align-items: center;
    padding: 2rem;
  }

  .intro-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
  }

  .intro-text {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .intro-line {
    font-size: clamp(2.5rem, 8vw, 6rem);
    font-weight: 700;
    line-height: 1.1;
    letter-spacing: -0.03em;
    display: flex;
    flex-wrap: wrap;
    gap: 0 0.3em;
  }

  .text-muted {
    opacity: 0.5;
  }

  .name-wrapper {
    position: relative;
    display: inline-block;
  }

  .name {
    position: relative;
    display: inline-block;
  }

  .name::after {
    content: '';
    position: absolute;
    bottom: 0.1em;
    left: 0;
    width: 100%;
    height: 0.1em;
    background: linear-gradient(90deg, var(--color-accent), var(--color-accent-secondary));
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .name-wrapper:hover .name::after {
    transform: scaleX(1);
    transform-origin: left;
  }

  .intro-roles {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .intro-role {
    font-size: clamp(1rem, 2vw, 1.25rem);
    line-height: 1.5;
  }

  .intro-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 1rem;
  }

  .intro-link {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1.125rem;
    font-weight: 500;
    position: relative;
    width: fit-content;
    padding: 0.5rem 0;
  }

  .arrow {
    transition: transform 0.3s ease;
  }

  .intro-link:hover .arrow {
    transform: translateX(4px);
  }

  .link-text {
    position: relative;
  }

  .link-underline {
    position: absolute;
    bottom: 0;
    left: 2rem;
    right: 0;
    height: 2px;
    background: currentColor;
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.3s ease;
  }

  .intro-link:hover .link-underline {
    transform: scaleX(1);
    transform-origin: left;
  }

  .social-links {
    display: flex;
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: transparent;
    border: 1px solid currentColor;
    opacity: 0.5;
    transition: all 0.3s ease;
  }

  .social-icon:hover {
    opacity: 1;
    background: var(--color-accent);
    border-color: var(--color-accent);
    color: white;
    transform: translateY(-4px);
  }

  .social-icon svg {
    width: 20px;
    height: 20px;
  }

  @media (max-width: 768px) {
    .intro-line {
      flex-direction: column;
      gap: 0;
    }
  }
</style>
