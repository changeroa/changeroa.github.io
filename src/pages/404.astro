---
import BaseLayout from '../layouts/BaseLayout.astro';
import { defaultLang, useTranslations } from '../i18n/translations';

const lang = defaultLang;
const basePath = `/${lang}`;
const t = useTranslations(lang);
---

<BaseLayout title={t('404.title')}>
  <section class="error-page">
    <div class="error-content">
      <div class="glitch-wrapper">
        <h1 class="error-code" data-text="404">404</h1>
      </div>
      
      <h2 class="error-heading">{t('404.heading')}</h2>
      <p class="error-subheading">{t('404.subheading')}</p>
      <p class="error-description">{t('404.description')}</p>
      
      <div class="error-actions">
        <a href={basePath} class="btn btn-primary" data-cursor-hover>
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
            <polyline points="9 22 9 12 15 12 15 22"/>
          </svg>
          {t('404.homeButton')}
        </a>
        <button class="btn btn-outline" onclick="history.back()" data-cursor-hover>
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m12 19-7-7 7-7"/>
            <path d="M19 12H5"/>
          </svg>
          {t('404.backButton')}
        </button>
      </div>
    </div>

    <div class="floating-shapes">
      <div class="shape shape-1"></div>
      <div class="shape shape-2"></div>
      <div class="shape shape-3"></div>
    </div>
  </section>
</BaseLayout>

<style>
  .error-page {
    min-height: calc(100vh - 160px);
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 2rem;
    position: relative;
    overflow: hidden;
  }

  .error-content {
    position: relative;
    z-index: 1;
  }

  .glitch-wrapper {
    margin-bottom: 1rem;
  }

  .error-code {
    font-size: clamp(8rem, 25vw, 14rem);
    font-weight: 900;
    line-height: 1;
    letter-spacing: -0.05em;
    background: linear-gradient(135deg, var(--color-accent), var(--color-accent-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    position: relative;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.8; }
  }

  .error-heading {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .error-subheading {
    font-size: 1.25rem;
    color: var(--color-accent);
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .error-description {
    font-size: 1rem;
    color: var(--color-text-muted);
    max-width: 400px;
    margin: 0 auto 2rem;
    line-height: 1.6;
  }

  .error-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    border-radius: 100px;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s cubic-bezier(0.25, 1, 0.5, 1);
    cursor: pointer;
  }

  .btn-primary {
    background: var(--color-accent);
    color: white;
    border: none;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(99, 102, 241, 0.4);
  }

  .btn-outline {
    background: transparent;
    color: var(--color-text);
    border: 2px solid var(--color-text-muted);
  }

  .btn-outline:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
    transform: translateY(-2px);
  }

  /* Floating Shapes */
  .floating-shapes {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
  }

  .shape {
    position: absolute;
    border-radius: 50%;
    opacity: 0.1;
  }

  .shape-1 {
    width: 300px;
    height: 300px;
    background: var(--color-accent);
    top: -100px;
    right: -100px;
    animation: float 6s ease-in-out infinite;
  }

  .shape-2 {
    width: 200px;
    height: 200px;
    background: var(--color-accent-secondary);
    bottom: -50px;
    left: -50px;
    animation: float 8s ease-in-out infinite reverse;
  }

  .shape-3 {
    width: 150px;
    height: 150px;
    background: var(--color-accent);
    top: 50%;
    left: 10%;
    animation: float 7s ease-in-out infinite 1s;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(10deg); }
  }

  @media (max-width: 480px) {
    .error-actions {
      flex-direction: column;
      align-items: center;
    }

    .btn {
      width: 100%;
      max-width: 200px;
      justify-content: center;
    }
  }
</style>
