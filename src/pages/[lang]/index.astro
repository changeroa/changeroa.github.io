---
import BaseLayout from '../../layouts/BaseLayout.astro';
import IntroLink from '../../components/IntroLink.astro';
import SocialIcon from '../../components/icons/SocialIcons.astro';
import { useTranslations, type Lang } from '../../i18n/translations';
import { site, socials } from '../../data/site';
import { getIntroLinks } from '../../data/navigation';

export function getStaticPaths() {
  return [
    { params: { lang: 'ko' } },
    { params: { lang: 'en' } }
  ];
}

const { lang } = Astro.params as { lang: Lang };
const t = useTranslations(lang);

const links = getIntroLinks(lang);
const names = site.displayNames[lang];
---

<BaseLayout>
  <section class="hero">
    <div class="intro-wrapper">
      <div class="intro-text">
        <h3 class="intro-line">
          <span class="text-muted">{t('home.greeting')}</span>
          {names.map(name => (
            <span class="name-wrapper">
              <span class="name">{name}</span>
            </span>
          ))}
        </h3>
        
        <div class="intro-roles">
          <p class="intro-role">{t('home.tagline')}</p>
          <p class="intro-role text-muted">{t('home.description')}</p>
        </div>
        
        <div class="intro-links">
          {links.map(link => (
            <IntroLink href={link.href} text={link.text} />
          ))}
        </div>

        <div class="social-links">
          <a href={socials.github} target="_blank" rel="noopener" class="social-icon" data-cursor-hover aria-label="GitHub">
            <SocialIcon name="github" size={24} />
          </a>
          <a href={socials.linkedin} target="_blank" rel="noopener" class="social-icon" data-cursor-hover aria-label="LinkedIn">
            <SocialIcon name="linkedin" size={24} />
          </a>
          <a href={socials.instagram} target="_blank" rel="noopener" class="social-icon" data-cursor-hover aria-label="Instagram">
            <SocialIcon name="instagram" size={24} />
          </a>
          <a href={socials.email} class="social-icon" data-cursor-hover aria-label="Email">
            <SocialIcon name="email" size={24} />
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    min-height: calc(100vh - 100px);
    display: flex;
    align-items: center;
    padding: 2rem;
  }

  .intro-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
  }

  .intro-text {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .intro-line {
    font-size: clamp(2.5rem, 8vw, 6rem);
    font-weight: 700;
    line-height: 1.1;
    letter-spacing: -0.03em;
    display: flex;
    flex-wrap: wrap;
    gap: 0 0.3em;
  }

  .text-muted {
    opacity: 0.5;
  }

  .name-wrapper {
    position: relative;
    display: inline-block;
  }

  .name {
    position: relative;
    display: inline-block;
  }

  .name::after {
    content: '';
    position: absolute;
    bottom: 0.1em;
    left: 0;
    width: 100%;
    height: 0.1em;
    background: linear-gradient(90deg, var(--color-accent), var(--color-accent-secondary));
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .name-wrapper:hover .name::after {
    transform: scaleX(1);
    transform-origin: left;
  }

  .intro-roles {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .intro-role {
    font-size: clamp(1rem, 2vw, 1.25rem);
    line-height: 1.5;
  }

  .intro-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 1rem;
  }

  .social-links {
    display: flex;
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: transparent;
    border: 1px solid currentColor;
    opacity: 0.5;
    transition: all 0.3s ease;
  }

  .social-icon:hover {
    opacity: 1;
    background: var(--color-accent);
    border-color: var(--color-accent);
    color: white;
    transform: translateY(-4px);
  }

  .social-icon svg {
    width: 20px;
    height: 20px;
  }

  @media (max-width: 768px) {
    .intro-line {
      flex-direction: column;
      gap: 0;
    }
  }
</style>
