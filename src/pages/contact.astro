---
import BaseLayout from '../layouts/BaseLayout.astro';
import SocialCard from '../components/SocialCard.astro';
import ContactForm from '../components/ContactForm.astro';
import ScrollReveal from '../components/ScrollReveal.astro';
import { useTranslations } from '../i18n/translations';
import { getPageTitle, socialCards } from '../data/site';

const lang = 'ko';
const t = useTranslations(lang);
const pageTitle = getPageTitle('contact', lang);
const cards = socialCards[lang];
---

<BaseLayout title={pageTitle}>
  <section class="contact-section">
    <div class="container">
      <div class="contact-layout">
        <div class="content-side">
          <ScrollReveal animation="fade-up">
            <h1 class="page-title">{t('contact.title')}</h1>
            <p class="page-subtitle" set:html={t('contact.subtitle').replace('\n', '<br />')}></p>
          </ScrollReveal>
          
          <ScrollReveal animation="fade-up" delay={200}>
            <div class="form-wrapper">
              <ContactForm lang={lang} />
            </div>
          </ScrollReveal>
        </div>

        <div class="links-side">
          <ScrollReveal animation="fade-left" delay={100}>
            <div class="social-grid">
              {cards.map((card, i) => (
                <SocialCard 
                  href={card.href} 
                  icon={card.icon as any} 
                  label={card.label} 
                  value={card.value} 
                  delay={(i + 1) * 100} 
                />
              ))}
            </div>
          </ScrollReveal>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .contact-section {
    padding: 8rem 0 4rem;
    min-height: calc(100vh - 100px);
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  .contact-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 6rem;
    align-items: center;
  }

  .content-side {
    padding-right: 2rem;
  }

  .page-title {
    font-size: clamp(3rem, 8vw, 5rem);
    font-weight: 800;
    line-height: 1;
    letter-spacing: -0.02em;
    margin-bottom: 2rem;
    background: linear-gradient(to right, var(--color-text), var(--color-text-muted));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    word-break: keep-all;
  }

  .page-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    line-height: 1.7;
    margin-bottom: 3rem;
    max-width: 90%;
    word-break: keep-all;
  }

  .form-wrapper {
    margin-top: 2rem;
  }

  .social-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  @media (max-width: 900px) {
    .contact-layout {
      grid-template-columns: 1fr;
      gap: 4rem;
    }

    .content-side {
      padding-right: 0;
      text-align: center;
    }

    .page-title {
      font-size: 3.5rem;
    }

    .page-subtitle {
      margin-left: auto;
      margin-right: auto;
    }

    .social-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .social-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
