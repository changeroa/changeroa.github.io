---
import LanguageSwitcher from './LanguageSwitcher.astro';
import ThemeToggle from './ThemeToggle.astro';
import { getLangFromUrl, useTranslations } from '../i18n/translations';
import { identity, menuSocials } from '../data/site';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const defaultLang = 'ko';
const basePath = lang === defaultLang ? '' : `/${lang}`;

const currentPath = Astro.url.pathname;

const isActive = (path: string) => {
  const normalizedCurrent = currentPath.replace(/\/$/, '') || '/';
  const normalizedPath = path.replace(/\/$/, '') || '/';
  return normalizedCurrent === normalizedPath;
};
---

<header class="header">
  <div class="header-content">
    <div class="left-part">
      <a href={basePath || '/'} class="logo" data-cursor-hover aria-label={lang === 'ko' ? '홈으로' : 'Go to home'}>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" width="48" height="48" class="logo-icon" aria-hidden="true">
          <circle cx="24" cy="24" r="20" fill="none" stroke="currentColor" stroke-width="2"/>
          <text x="24" y="30" text-anchor="middle" font-size="16" font-weight="bold" fill="currentColor">V</text>
        </svg>
      </a>
      <h5 class="identity">
        <span class="nickname">{identity.nickname}</span>/<span class="fullname">{identity.fullname}</span>
      </h5>
    </div>
    <div class="right-part">
      <LanguageSwitcher />
      <ThemeToggle />
      <button 
        class="hamburger-btn" 
        aria-label={lang === 'ko' ? '메뉴' : 'Menu'}
        aria-expanded="false"
        aria-controls="main-navigation"
        data-cursor-hover
      >
        <div class="hamburger-lines">
          <span class="line line-1"></span>
          <span class="line line-2"></span>
        </div>
      </button>
    </div>
  </div>
</header>

<div 
  id="main-navigation" 
  class="menu-overlay" 
  role="dialog" 
  aria-modal="true" 
  aria-label={lang === 'ko' ? '내비게이션 메뉴' : 'Navigation menu'}
  aria-hidden="true"
>
  <div class="menu-content">
    <nav class="menu-nav">
      <ul class="menu-items">
        <li class="menu-item" style="--delay: 0">
          <a href={basePath || '/'} class:list={[{ 'active': isActive(basePath || '/') }]} data-cursor-hover>
            <span class="item-number">01</span>
            <span class="item-text" data-text={t('nav.home')}>{t('nav.home')}</span>
            <span class="item-underline"></span>
          </a>
        </li>
        <li class="menu-item" style="--delay: 1">
          <a href={`${basePath}/work`} class:list={[{ 'active': isActive(`${basePath}/work`) }]} data-cursor-hover>
            <span class="item-number">02</span>
            <span class="item-text" data-text={t('nav.work')}>{t('nav.work')}</span>
            <span class="item-underline"></span>
          </a>
        </li>
        <li class="menu-item" style="--delay: 2">
          <a href={`${basePath}/portfolio`} class:list={[{ 'active': isActive(`${basePath}/portfolio`) }]} data-cursor-hover>
            <span class="item-number">03</span>
            <span class="item-text" data-text={t('nav.portfolio')}>{t('nav.portfolio')}</span>
            <span class="item-underline"></span>
          </a>
        </li>
        <li class="menu-item" style="--delay: 3">
          <a href={`${basePath}/blog`} class:list={[{ 'active': isActive(`${basePath}/blog`) }]} data-cursor-hover>
            <span class="item-number">04</span>
            <span class="item-text" data-text={t('nav.blog')}>{t('nav.blog')}</span>
            <span class="item-underline"></span>
          </a>
        </li>
        <li class="menu-item" style="--delay: 4">
          <a href={`${basePath}/about`} class:list={[{ 'active': isActive(`${basePath}/about`) }]} data-cursor-hover>
            <span class="item-number">05</span>
            <span class="item-text" data-text={t('nav.about')}>{t('nav.about')}</span>
            <span class="item-underline"></span>
          </a>
        </li>
        <li class="menu-item" style="--delay: 5">
          <a href={`${basePath}/contact`} class:list={[{ 'active': isActive(`${basePath}/contact`) }]} data-cursor-hover>
            <span class="item-number">06</span>
            <span class="item-text" data-text={t('nav.contact')}>{t('nav.contact')}</span>
            <span class="item-underline"></span>
          </a>
        </li>
      </ul>
    </nav>
    <div class="menu-footer">
      <div class="menu-socials">
        {menuSocials.map(social => (
          <a href={social.href} target="_blank" rel="noopener" class="social-link" data-cursor-hover>
            {social.name} <span class="arrow">↗</span>
          </a>
        ))}
      </div>
    </div>
  </div>
</div>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: var(--z-header);
    padding: 1.5rem 2rem;
    transition: transform 0.3s ease, background-color 0.3s ease, z-index 0s;
    background: var(--color-bg);
  }

  :global(body.dark) .header {
    background: var(--color-bg-dark);
  }

  :global(body.modal-open) .header {
    z-index: 1;
    pointer-events: none;
  }

  :global(body.modal-open) .right-part,
  :global(body.modal-open) .hamburger-btn {
    z-index: 1;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1400px;
    margin: 0 auto;
  }

  .left-part {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .logo {
    display: flex;
    transition: transform 0.2s ease;
  }

  .logo:hover {
    transform: scale(1.05);
  }

  .logo-icon {
    width: 48px;
    height: 48px;
  }

  .identity {
    font-size: 0.875rem;
    font-weight: 400;
    opacity: 0.9;
  }

  .nickname {
    font-weight: 600;
  }

  .fullname {
    opacity: 0.8;
  }

  .right-part {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    position: relative;
    z-index: var(--z-header-controls);
    pointer-events: auto;
  }

  .hamburger-btn {
    width: 48px;
    height: 48px;
    position: relative;
    z-index: var(--z-header-controls);
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
    pointer-events: auto;
    background: transparent;
    border: none;
    color: inherit;
  }

  .hamburger-lines {
    width: 24px;
    height: 12px;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .line {
    display: block;
    width: 100%;
    height: 2px;
    background-color: currentColor;
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1), opacity 0.4s ease;
  }

  :global(body.menu-open) .line-1 {
    transform: translateY(5px) rotate(45deg);
  }

  :global(body.menu-open) .line-2 {
    transform: translateY(-5px) rotate(-45deg);
  }

  .menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: var(--z-menu-overlay);
    background: rgba(245, 245, 245, 0.98);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.4s ease-out, visibility 0.4s ease-out;
  }

  @media (max-width: 768px) {
    .menu-overlay {
      backdrop-filter: none;
      -webkit-backdrop-filter: none;
      background: rgba(245, 245, 245, 0.99);
    }
  }

  :global(body.dark) .menu-overlay {
    background: rgba(10, 10, 10, 0.98);
  }

  @media (max-width: 768px) {
    :global(body.dark) .menu-overlay {
      background: rgba(10, 10, 10, 0.99);
    }
  }

  :global(body.menu-open) .menu-overlay {
    opacity: 1;
    visibility: visible;
  }

  .menu-content {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 2rem;
    position: relative;
  }

  .menu-nav {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    flex: 1;
  }

  .menu-items {
    list-style: none;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5vh;
  }

  .menu-item {
    overflow: hidden;
  }

  .menu-item a {
    display: flex;
    align-items: center;
    gap: 1rem;
    text-decoration: none;
    color: var(--color-text);
    position: relative;
    padding: 0.5rem 1rem;
    transform: translateY(100%);
    opacity: 0;
    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1), opacity 0.6s ease;
    transition-delay: calc(var(--delay) * 0.05s);
  }

  :global(body.menu-open) .menu-item a {
    transform: translateY(0);
    opacity: 1;
  }

  .item-number {
    font-size: 0.875rem;
    font-family: var(--font-mono);
    color: var(--color-text-muted);
    font-weight: 400;
    transition: transform 0.3s ease, color 0.3s ease;
  }

  .item-text {
    font-size: clamp(2.5rem, 5vw, 4.5rem);
    font-weight: 800;
    text-transform: uppercase;
    line-height: 1;
    letter-spacing: -0.02em;
    position: relative;
    transition: color 0.3s ease, transform 0.3s ease;
  }

  .item-underline {
    position: absolute;
    bottom: 0;
    left: 4rem;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--color-accent), var(--color-accent-secondary));
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.3s ease;
  }

  .menu-item a:hover .item-text {
    color: var(--color-accent);
  }
  
  .menu-item a:hover .item-number {
    color: var(--color-accent);
    transform: translateX(4px);
  }

  .menu-item a:hover .item-underline {
    transform: scaleX(1);
    transform-origin: left;
  }
  
  .menu-item a.active .item-text {
    color: var(--color-accent);
  }
  
  .menu-item a.active .item-number {
    color: var(--color-accent);
  }

  .menu-item a.active .item-underline {
    transform: scaleX(1);
  }

  .menu-footer {
    width: 100%;
    display: flex;
    justify-content: center;
    padding-bottom: 3rem;
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.5s ease, transform 0.5s ease;
    transition-delay: 0.4s;
  }

  :global(body.menu-open) .menu-footer {
    opacity: 1;
    transform: translateY(0);
  }

  .menu-socials {
    display: flex;
    gap: 3rem;
    align-items: center;
  }

  .social-link {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    text-decoration: none;
    color: var(--color-text);
    display: flex;
    align-items: center;
    gap: 0.5rem;
    opacity: 0.6;
    transition: all 0.3s ease;
  }

  .social-link:hover {
    opacity: 1;
    transform: translateY(-2px);
    color: var(--color-accent);
  }

  .arrow {
    font-family: var(--font-mono);
    font-size: 1rem;
    transition: transform 0.3s ease;
  }
  
  .social-link:hover .arrow {
    transform: translate(2px, -2px);
  }

  @media (max-width: 768px) {
    .header {
      padding: 1.5rem;
    }
    
    .item-text {
      font-size: 2.5rem;
    }
    
    .menu-socials {
      gap: 1.5rem;
      flex-wrap: wrap;
      justify-content: center;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .menu-overlay,
    .menu-item a,
    .menu-footer,
    .line,
    .item-underline,
    .social-link,
    .arrow {
      transition: none;
    }
    
    .menu-item a {
      transform: none;
      opacity: 1;
    }
    
    .menu-footer {
      transform: none;
      opacity: 1;
    }
  }

</style>

<script>
  let headerController: AbortController | null = null;

  function initHeader() {
    if (headerController) {
      headerController.abort();
    }
    headerController = new AbortController();
    const { signal } = headerController;

    const hamburgerBtn = document.querySelector('.hamburger-btn') as HTMLButtonElement;
    const menuOverlay = document.querySelector('.menu-overlay') as HTMLElement;
    const body = document.body;
    const menuLinks = document.querySelectorAll('.menu-overlay a') as NodeListOf<HTMLAnchorElement>;
    const firstMenuItem = document.querySelector('.menu-item a') as HTMLAnchorElement;

    function openMenu() {
      body.classList.add('menu-open');
      body.style.overflow = 'hidden';
      hamburgerBtn?.setAttribute('aria-expanded', 'true');
      menuOverlay?.setAttribute('aria-hidden', 'false');
      
      setTimeout(() => {
        firstMenuItem?.focus();
      }, 100);
    }

    function closeMenu() {
      body.classList.remove('menu-open');
      body.style.overflow = '';
      hamburgerBtn?.setAttribute('aria-expanded', 'false');
      menuOverlay?.setAttribute('aria-hidden', 'true');
      hamburgerBtn?.focus();
    }

    function handleFocusTrap(e: KeyboardEvent) {
      if (!body.classList.contains('menu-open')) return;
      
      const focusableElements = menuOverlay?.querySelectorAll(
        'a[href], button:not([disabled]), [tabindex]:not([tabindex="-1"])'
      ) as NodeListOf<HTMLElement>;
      
      if (!focusableElements || focusableElements.length === 0) return;
      
      const firstElement = focusableElements[0];
      const lastElement = focusableElements[focusableElements.length - 1];

      if (e.shiftKey && document.activeElement === firstElement) {
        e.preventDefault();
        lastElement.focus();
      } else if (!e.shiftKey && document.activeElement === lastElement) {
        e.preventDefault();
        firstElement.focus();
      }
    }

    if (hamburgerBtn) {
      hamburgerBtn.addEventListener('click', () => {
        const isOpen = body.classList.contains('menu-open');
        if (isOpen) {
          closeMenu();
        } else {
          openMenu();
        }
      }, { signal });
    }

    menuLinks.forEach(link => {
      link.addEventListener('click', () => {
        closeMenu();
      }, { signal });
    });

    document.addEventListener('keydown', (e: KeyboardEvent) => {
      if (e.key === 'Escape' && body.classList.contains('menu-open')) {
        closeMenu();
      }
      if (e.key === 'Tab') {
        handleFocusTrap(e);
      }
    }, { signal });
  }

  initHeader();
  document.addEventListener('astro:page-load', initHeader);
</script>
