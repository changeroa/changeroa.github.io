---
interface Props {
  quote: string;
  author: string;
  role?: string;
  company?: string;
  avatar?: string;
}

const { quote, author, role, company, avatar } = Astro.props;
---

<blockquote class="testimonial">
  <div class="testimonial-content">
    <svg class="quote-icon" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
      <path d="M11.192 15.757c0-.88-.23-1.618-.69-2.217-.326-.412-.768-.683-1.327-.812-.55-.128-1.07-.137-1.54-.028-.16-.95.1-1.956.76-3.022.66-1.065 1.515-1.867 2.558-2.403L9.373 5c-.8.396-1.56.898-2.26 1.505-.71.607-1.34 1.305-1.9 2.094s-.98 1.68-1.25 2.69-.346 2.04-.217 3.1c.168 1.4.62 2.52 1.356 3.35.735.84 1.652 1.26 2.748 1.26.965 0 1.766-.29 2.4-.878.628-.576.94-1.365.94-2.368l.002.003zm9.124 0c0-.88-.23-1.618-.69-2.217-.326-.42-.768-.695-1.327-.825-.55-.13-1.07-.14-1.54-.03-.16-.94.09-1.95.75-3.02.66-1.06 1.514-1.86 2.557-2.4L18.49 5c-.8.396-1.555.898-2.26 1.505-.708.607-1.34 1.305-1.894 2.094-.556.79-.97 1.68-1.24 2.69-.273 1-.345 2.04-.217 3.1.165 1.4.615 2.52 1.35 3.35.732.833 1.646 1.25 2.742 1.25.967 0 1.768-.29 2.402-.876.627-.576.942-1.365.942-2.368v.01z"/>
    </svg>
    <p class="quote-text">{quote}</p>
  </div>

  <footer class="testimonial-footer">
    {avatar ? (
      <img src={avatar} alt={author} class="author-avatar" loading="lazy" />
    ) : (
      <div class="author-avatar-placeholder">
        {author.charAt(0).toUpperCase()}
      </div>
    )}
    <div class="author-info">
      <cite class="author-name">{author}</cite>
      {(role || company) && (
        <span class="author-role">
          {role}{role && company && ' @ '}{company}
        </span>
      )}
    </div>
  </footer>
</blockquote>

<style>
  .testimonial {
    background: var(--color-surface);
    border-radius: 16px;
    padding: 2rem;
    margin: 0;
    position: relative;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid rgba(0, 0, 0, 0.05);
  }

  :global(.dark) .testimonial {
    background: var(--color-surface-dark);
    border-color: rgba(255, 255, 255, 0.05);
  }

  .testimonial:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.1);
  }

  .testimonial-content {
    margin-bottom: 1.5rem;
    position: relative;
  }

  .quote-icon {
    color: var(--color-accent);
    opacity: 0.3;
    margin-bottom: 1rem;
  }

  .quote-text {
    font-size: 1.1rem;
    line-height: 1.7;
    color: var(--color-text);
    font-style: italic;
    margin: 0;
  }

  .testimonial-footer {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
  }

  :global(.dark) .testimonial-footer {
    border-color: rgba(255, 255, 255, 0.1);
  }

  .author-avatar,
  .author-avatar-placeholder {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    object-fit: cover;
    flex-shrink: 0;
  }

  .author-avatar-placeholder {
    background: linear-gradient(135deg, var(--color-accent), var(--color-accent-secondary));
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    font-weight: 700;
  }

  .author-info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .author-name {
    font-style: normal;
    font-weight: 600;
    font-size: 1rem;
    color: var(--color-text);
  }

  .author-role {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }
</style>
