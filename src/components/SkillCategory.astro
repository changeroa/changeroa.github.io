---
interface Props {
  title: string;
  skills: string[];
}

const { title, skills } = Astro.props;
---

<div class="skill-category">
  <h4>{title}</h4>
  <ul>
    {skills.map(skill => (
      <li>{skill}</li>
    ))}
  </ul>
</div>

<style>
  .skill-category {
    background: var(--color-surface);
    border-radius: 12px;
    padding: 1.5rem;
  }

  :global(body.dark) .skill-category {
    background: var(--color-surface-dark);
  }

  h4 {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-accent);
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  ul {
    list-style: none;
  }

  li {
    padding: 0.375rem 0;
    color: var(--color-text-muted);
    font-size: 0.9rem;
    position: relative;
    padding-left: 1rem;
  }

  li::before {
    content: '>';
    position: absolute;
    left: 0;
    color: var(--color-accent);
    font-family: var(--font-mono);
    font-size: 0.75rem;
  }
</style>
