---
interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  aspectRatio?: string; // e.g., "16/9", "4/3", "1/1"
  loading?: 'lazy' | 'eager';
}

const {
  src,
  alt,
  width,
  height,
  class: className = '',
  aspectRatio = '16/9',
  loading = 'lazy',
} = Astro.props;
---

<div class={`image-skeleton-wrapper ${className}`} style={`aspect-ratio: ${aspectRatio};`}>
  <div class="skeleton-placeholder" aria-hidden="true">
    <div class="skeleton-shimmer"></div>
  </div>
  <img
    src={src}
    alt={alt}
    width={width}
    height={height}
    loading={loading}
    class="skeleton-image"
    onload="this.parentElement.classList.add('loaded')"
    onerror="this.parentElement.classList.add('error')"
  />
</div>

<style>
  .image-skeleton-wrapper {
    position: relative;
    overflow: hidden;
    background: var(--color-surface);
    border-radius: inherit;
  }

  :global(.dark) .image-skeleton-wrapper {
    background: var(--color-surface-dark);
  }

  .skeleton-placeholder {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      90deg,
      rgba(0, 0, 0, 0.06) 25%,
      rgba(0, 0, 0, 0.1) 37%,
      rgba(0, 0, 0, 0.06) 63%
    );
    background-size: 400% 100%;
    animation: shimmer 1.4s ease infinite;
    transition: opacity 0.3s ease;
  }

  :global(.dark) .skeleton-placeholder {
    background: linear-gradient(
      90deg,
      rgba(255, 255, 255, 0.06) 25%,
      rgba(255, 255, 255, 0.1) 37%,
      rgba(255, 255, 255, 0.06) 63%
    );
    background-size: 400% 100%;
  }

  @keyframes shimmer {
    0% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0 50%;
    }
  }

  .skeleton-image {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  .image-skeleton-wrapper.loaded .skeleton-placeholder {
    opacity: 0;
    pointer-events: none;
    animation: none;
  }

  .image-skeleton-wrapper.loaded .skeleton-image {
    opacity: 1;
  }

  .image-skeleton-wrapper.error .skeleton-placeholder {
    animation: none;
    background: rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .image-skeleton-wrapper.error .skeleton-placeholder::after {
    content: '!';
    font-size: 2rem;
    color: var(--color-text-muted);
    opacity: 0.5;
  }
</style>
