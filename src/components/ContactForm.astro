---
interface Props {
  formAction?: string; // Formspree, Web3Forms, etc.
  accessKey?: string; // Web3Forms access key
  lang?: 'en' | 'ko';
}

const { formAction = 'https://api.web3forms.com/submit', accessKey = '', lang = 'ko' } = Astro.props;

const labels = {
  en: {
    name: 'Name',
    email: 'Email',
    subject: 'Subject',
    message: 'Message',
    submit: 'Send Message',
    sending: 'Sending...',
    success: 'Message sent successfully!',
    error: 'Failed to send. Please try again.',
    namePlaceholder: 'Your name',
    emailPlaceholder: 'your@email.com',
    subjectPlaceholder: 'What is this about?',
    messagePlaceholder: 'Your message...',
  },
  ko: {
    name: '이름',
    email: '이메일',
    subject: '제목',
    message: '메시지',
    submit: '메시지 보내기',
    sending: '전송 중...',
    success: '메시지가 성공적으로 전송되었습니다!',
    error: '전송에 실패했습니다. 다시 시도해주세요.',
    namePlaceholder: '이름을 입력하세요',
    emailPlaceholder: 'your@email.com',
    subjectPlaceholder: '무엇에 대한 문의인가요?',
    messagePlaceholder: '메시지를 입력하세요...',
  },
};

const t = labels[lang];
---

<form 
  class="contact-form" 
  action={formAction} 
  method="POST"
  data-success-message={t.success}
  data-error-message={t.error}
  data-sending-text={t.sending}
  data-submit-text={t.submit}
>
  {accessKey && <input type="hidden" name="access_key" value={accessKey} />}
  
  <div class="form-group">
    <label for="name" class="form-label">{t.name}</label>
    <input 
      type="text" 
      id="name" 
      name="name" 
      required 
      class="form-input"
      placeholder={t.namePlaceholder}
      autocomplete="name"
    />
  </div>

  <div class="form-group">
    <label for="email" class="form-label">{t.email}</label>
    <input 
      type="email" 
      id="email" 
      name="email" 
      required 
      class="form-input"
      placeholder={t.emailPlaceholder}
      autocomplete="email"
    />
  </div>

  <div class="form-group">
    <label for="subject" class="form-label">{t.subject}</label>
    <input 
      type="text" 
      id="subject" 
      name="subject" 
      required 
      class="form-input"
      placeholder={t.subjectPlaceholder}
    />
  </div>

  <div class="form-group">
    <label for="message" class="form-label">{t.message}</label>
    <textarea 
      id="message" 
      name="message" 
      rows="5" 
      required 
      class="form-input form-textarea"
      placeholder={t.messagePlaceholder}
    ></textarea>
  </div>

  <div class="form-status" aria-live="polite"></div>

  <button type="submit" class="form-submit" data-cursor-hover>
    <span class="submit-text">{t.submit}</span>
    <svg class="submit-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <line x1="22" y1="2" x2="11" y2="13"></line>
      <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
    </svg>
    <svg class="submit-spinner" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <circle cx="12" cy="12" r="10" stroke-dasharray="32" stroke-dashoffset="32">
        <animate attributeName="stroke-dashoffset" values="32;0" dur="1s" repeatCount="indefinite"/>
      </circle>
    </svg>
  </button>
</form>

<style>
  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    max-width: 600px;
    margin: 0 auto;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text);
  }

  .form-input {
    padding: 1rem 1.25rem;
    border: 2px solid transparent;
    border-radius: 12px;
    background: var(--color-surface);
    color: var(--color-text);
    font-size: 1rem;
    font-family: inherit;
    transition: all 0.2s ease;
    outline: none;
  }

  :global(.dark) .form-input {
    background: var(--color-surface-dark);
  }

  .form-input::placeholder {
    color: var(--color-text-muted);
    opacity: 0.7;
  }

  .form-input:hover {
    border-color: rgba(99, 102, 241, 0.3);
  }

  .form-input:focus {
    border-color: var(--color-accent);
    box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
  }

  .form-textarea {
    resize: vertical;
    min-height: 150px;
  }

  .form-status {
    padding: 1rem;
    border-radius: 8px;
    font-size: 0.875rem;
    text-align: center;
    display: none;
  }

  .form-status.success {
    display: block;
    background: rgba(34, 197, 94, 0.1);
    color: #22c55e;
    border: 1px solid rgba(34, 197, 94, 0.2);
  }

  .form-status.error {
    display: block;
    background: rgba(239, 68, 68, 0.1);
    color: #ef4444;
    border: 1px solid rgba(239, 68, 68, 0.2);
  }

  .form-submit {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    background: var(--color-accent);
    color: white;
    border: none;
    border-radius: 100px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.25, 1, 0.5, 1);
    align-self: flex-start;
  }

  .form-submit:hover:not(:disabled) {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(99, 102, 241, 0.4);
  }

  .form-submit:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }

  .form-submit:focus-visible {
    outline: 3px solid var(--color-accent-secondary);
    outline-offset: 2px;
  }

  .submit-spinner {
    display: none;
    animation: spin 1s linear infinite;
  }

  .form-submit.loading .submit-icon {
    display: none;
  }

  .form-submit.loading .submit-spinner {
    display: block;
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
</style>

<script>
  function initContactForm() {
    const form = document.querySelector('.contact-form') as HTMLFormElement;
    if (!form) return;

    const submitBtn = form.querySelector('.form-submit') as HTMLButtonElement;
    const submitText = form.querySelector('.submit-text') as HTMLSpanElement;
    const statusEl = form.querySelector('.form-status') as HTMLDivElement;

    const successMessage = form.dataset.successMessage || 'Success!';
    const errorMessage = form.dataset.errorMessage || 'Error!';
    const sendingText = form.dataset.sendingText || 'Sending...';
    const submitTextOriginal = form.dataset.submitText || 'Send';

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      if (!form.action) {
        statusEl.textContent = 'Form action URL not configured.';
        statusEl.className = 'form-status error';
        return;
      }

      submitBtn.disabled = true;
      submitBtn.classList.add('loading');
      submitText.textContent = sendingText;
      statusEl.className = 'form-status';

      try {
        const formData = new FormData(form);
        const response = await fetch(form.action, {
          method: 'POST',
          body: formData,
          headers: {
            'Accept': 'application/json',
          },
        });

        if (response.ok) {
          statusEl.textContent = successMessage;
          statusEl.className = 'form-status success';
          form.reset();
        } else {
          throw new Error('Network response was not ok');
        }
      } catch (error) {
        statusEl.textContent = errorMessage;
        statusEl.className = 'form-status error';
      } finally {
        submitBtn.disabled = false;
        submitBtn.classList.remove('loading');
        submitText.textContent = submitTextOriginal;
      }
    });
  }

  initContactForm();
  document.addEventListener('astro:page-load', initContactForm);
</script>
